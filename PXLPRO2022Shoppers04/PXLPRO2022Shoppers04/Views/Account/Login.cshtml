@model PXLPRO2022Shoppers04.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}


<div class="loginContainer">
    <div class="forms">
        <div class="form login">
            <span class="title">Login</span>
            <form asp-action="Login" asp-controller="Account">

                <div asp-validation-summary="ModelOnly" class="alert"></div>
                <div class="input-field">
                    <input asp-for="Username" type="text" placeholder="Enter your email or username">
                    <span asp-validation-for="Username" class="text-danger"></span>
                    <i class="uil uil-envelope"></i>
                </div>

                <div class="input-field">
                    <input asp-for="Password" type="password" class="password" placeholder="Enter your password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <i class="uil uil-lock icon"></i>
                    <i class="uil uil-eye-slash showHidePw"></i>
                </div>

                <div class="checkbox-text">
                    <div class="checkbox-content">
                    </div>
                </div>

                <div class="input-field button">
                    <input type="submit" value="Login Now">

                </div>
                @if (!string.IsNullOrEmpty(@Model.ErrorMessage))
                {
                    <span class="alert-secondary">@Model.ErrorMessage</span>
                }
            </form>

            <div class="login-signup d-flex flex-column">
                <div>
                    <a class="fa-brands fa-facebook btn btn-outline-primary m-1 w-15" asp-action="FacebookLogin"></a>
                    <a class="fa-brands fa-google btn btn-outline-danger m-1 w-15" asp-action="GoogleLogin"></a>
                    <a class="fa-brands fa-twitter btn btn-outline-primary m-1 w-15" asp-action="TwitterLogin"></a>
                    <a class="fa-brands fa-discord btn m-1 w-15" asp-action="DiscordLogin"></a>
                    <a class="fa-solid fa-user btn m-1 w-15" asp-action="IdentityServerLogin"></a>
                </div>
                <span class="text">
                    Not a member?
                    <a asp-action="Register" class="text signup-link">Signup now</a>
                </span>
            </div>
        </div>

    </div>
</div>

<style scoped>

    .login-signup div a:hover {
        text-decoration:none;
    }
    .alert {
        margin-top: 20px;
        color: white;
        background-color: #917abc;
        border-color: #ac9fc5;
    }

    .loginContainer {
        position: absolute;
        top: 50%;
        left: 50%;
        margin-right: -50%;
        transform: translate(-50%, -50%);
        max-width: 430px;
        width: 100%;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }


        .loginContainer .forms {
            width: 200%;
            display: flex;
            height: auto;
            align-items: center;
            transition: height 0.4s ease;
        }

        .loginContainer .form {
            width: 50%;
            padding: 30px;
            border-radius: 12px;
            background: #fff;
            transition: margin-left 0.36s ease;
        }

        .loginContainer.active .login {
            margin-left: -50%;
            opacity: 0;
            transition: margin-left 0.36s ease, opacity 0.3s ease;
        }

        .loginContainer .signup {
            opacity: 0;
            transition: opacity 0.18s ease;
        }

        .loginContainer.active .signup {
            opacity: 1;
            transition: opacity 0.4s ease;
        }

        .loginContainer.active .forms {
            height: 600px;
        }

        .loginContainer .form .title {
            position: relative;
            font-size: 27px;
            font-weight: 600;
        }

    .form .title::before {
        content: "";
        position: absolute;
        left: 0;
        bottom: 0;
        height: 3px;
        width: 30px;
        background-color: #917abc;
        border-radius: 25px;
    }

    .form .input-field {
        position: relative;
        height: 50px;
        width: 100%;
        margin-top: 30px;
    }

    .input-field input {
        position: absolute;
        height: 100%;
        width: 100%;
        padding: 0 35px;
        border: none;
        outline: none;
        font-size: 16px;
        border-bottom: 2px solid #ccc;
        border-top: 2px solid transparent;
        transition: border-bottom-color 0.4s ease;
    }

        .input-field input:is(:focus, :valid) {
            border-bottom-color: #917abc;
        }

    .input-field i {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        color: #999;
        font-size: 23px;
        transition: color 0.4s ease;
    }

    .input-field input:is(:focus, :valid) ~ i {
        color: #917abc;
    }

    .input-field i.icon {
        left: 0;
    }

    .input-field i.showHidePw {
        right: 0;
        cursor: pointer;
        padding: 10px;
    }

    .form .checkbox-text {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .checkbox-text .checkbox-content {
        display: flex;
        align-items: center;
    }

    .checkbox-content input {
        margin: 0 8px -2px 4px;
        accent-color: #4070f4;
    }

    .form .text {
        color: #333;
        font-size: 14px;
    }

    .form a.text {
        color: #4070f4;
        text-decoration: none;
    }

    .form a {
        text-decoration: none;
    }

        .form a:hover {
            text-decoration: underline;
        }

    .form .button {
        margin-top: 35px;
    }

        .form .button input {
            border: none;
            color: white;
            font-size: 17px;
            font-weight: 500;
            letter-spacing: 1px;
            border-radius: 6px;
            background-color: #9370db;
            cursor: pointer;
            transition: all 0.6s ease;
        }

    .button input:hover {
        background-color: #ac9fc5;
    }

    .form .login-signup {
        margin-top: 30px;
        text-align: center;
    }
</style>

<style scoped>
    html, body {
        background: black;
    }

    .btn {
        color: white;
        -ms-border-radius: 10%;
        border-radius: 10%;
        background-color: #808080;
    }

    .fa-facebook {
        background-color: #4267B2;
    }

    .fa-google {
        background-color: #DB4437;
    }

    .fa-twitter {
        background-color: #00acee;
    }

    .fa-discord {
        background-color: #7289DA;
    }

    .card {
        background-color: black;
        color: white;
        -ms-border-radius: 25px;
        border-radius: 25px;
    }

    hr {
        border-color: white;
    }
</style>

<script>
    const container = document.querySelector(".container"),
          pwShowHide = document.querySelectorAll(".showHidePw"),
          pwFields = document.querySelectorAll(".password"),
          signup = document.querySelector(".signup-link"),
          login = document.querySelector(".login-link");

          pwShowHide.forEach(eyeIcon => {
              eyeIcon.addEventListener("click", () => {
                  pwFields.forEach(pwField => {
                      if(pwField.type === "password") {
                          pwField.type = "text";

                          pwShowHide.forEach(icon => {
                            icon.classList.replace("uil-eye-slash", "uil-eye");
                          })
                        }else {
                            pwField.type = "password";

                            pwShowHide.forEach(icon => {
                                icon.classList.replace("uil-eye", "uil-eye-slash");
                            })
                        }
                  })
              })
          })

          signup.addEventListener("click", () => {
              container.classList.add("active");
          })

          login.addEventListener("click", () => {
            container.classList.remove("active");
        })</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}